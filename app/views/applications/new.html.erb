<header id="page-header">
  <h2> New Adoption Application </h2>
</header>

<main>
  <section>
    <h3> Select favorited pets you wish to adopt </h3>
    <%= form_tag '/applications' do %>
      <% @favorites.each do |favorite| %>
        <%= check_box_tag favorite.name %>
      <% end %>
      <%= label_tag :name %>
      <%= text_field_tag :name %><br/>
      <%= label_tag :address %>
      <%= text_field_tag :address %><br/>
      <%= label_tag :city %>
      <%= text_field_tag :city %><br/>
      <%= label_tag :state %>
      <%= text_field_tag :state %><br/>
      <%= label_tag :zip %>
      <%= text_field_tag :zip %>
      <%= label_tag :phone_number, 'Phone Number' %>
      <%= text_field_tag :phone_number %>
      <%= label_tag :description, 'Describe your qualifications' %>
      <%= text_area_tag :description %>
      <%= label_tag :submit, "" %>
      <%= submit_tag 'Submit' %>
    <% end %>
  </section>
</main>
