<header id="page-header">
  <h2>All Pets at <%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}" %> <%= @shelter.pet_count_label%></h2>
  <navbar>
    <span id="crud-links">
      <%= link_to 'Add Adoptable Pet', "/shelters/#{@shelter.id}/pets/new" %>
    </span>
    <span id="sort-links">
      <%= link_to 'Show All', "/shelters/#{@shelter.id}/pets", class: "#{@show_all}" %>
      <%= link_to 'Show Only Adoptable Pets', "/shelters/#{@shelter.id}/pets?adoptable=true", class: "#{@show_adoptable}" %>
      <%= link_to 'Show Only Adoption-Pending Pets', "/shelters/#{@shelter.id}/pets?adoptable=false", class: "#{@show_pending}" %>
    </span>
  </navbar>
</header>

<main>
  <% @pets.each do |pet| %>
    <section id="pet-<%= pet.id %>-section">
    <h3><a href="/pets/<%= pet.id %>"><%= pet.name %></a></h3>
    <p>
      Approximate Age: <%= pet.approx_age %><br/>
      Sex: <%= pet.sex %><br/>
      <%= image_tag "#{pet.image_path}", alt: "#{pet.image_path}" %>
    </p>
    </section>
  <% end %>
</main>
